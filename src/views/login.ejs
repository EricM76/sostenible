<%- include('./partials/head',{
    title : 'Login'
  }) %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<body class="login">
    <!-- Cabecera del sitio -->
    <%- include('./partials/header') %>
    <!-- Sitio del admin -->
    <main>
        <div class="nav_menu">
            <div class="box--admin">
                <a href="/admin" class="admin">Administrador</a>
            </div>
            <div class="box--register">
                <a href="/admin/register" class="register">Registrarse</a>
            </div>
        </div>
        <div class="main_login">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Login</h4>
                    <!-- Formulario para logearse -->
                    <form>
                        <!-- input Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Ingresá tu correo"
                                required />
                            <p class="form-text alert-hide">Obligatorio</p>
                        </div>
                        <!-- input Contraseña -->
                        <div class="mb-3">
                            <label for="passsword" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="passsword" name="passsword"
                                placeholder="Ingresá una contraseña" value="" required />
                            <p class="form-text alert-hide">Obligatorio</p>
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!--  Pie del sitio -->
    <%- include('./partials/footer') %>
</body>

</html>