<%- include('./partials/head',{ title : 'Administrador' }) %>

    <body class="admin">
        <!-- Cabecera del sitio -->
        <%- include('./partials/header') %>
            <!-- Sitio del admin -->
            <main>
                <nav class="nav_menu">
                    <div class="box--admin">Administrador</div>
                    <!-- Nav de Register | Login -->
                    <ul type="none">
                        <div class="nav_menu--li">
                        </div>
                    </ul>
                </nav>
                <!-- Sección de Novedades -->
                <section class="section_novedades">
                    <div class="novedades_header">
                        <h2 class="novedades_title">Novedades</h2>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-outline-dark me-md-2" type="button"><a
                                    href="/posts/add">Añadir</a></button>
                        </div>
                    </div>
                    <!-- Novedades -->
                    <article class="cards_novedades">
                        <% posts.forEach(({id, image, title, shortDescription, campaign, date})=> { %>
                            <div class="card">
                                <div class="card--body">
                                    <div class="box--card_img">
                                        <p>id : <%= id %>
                                        </p>

                                        <img src="<%= image %>" class="card-img-top" alt="Imagen de la novedad">
                                    </div>
                                    <h5 class="card-title">
                                        <%= title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= shortDescription %>
                                    </p>
                                    <h5>
                                        <%= campaign %>
                                    </h5>
                                    <% if (date) { %>
                                        <small class="date">
                                            <%= date %>
                                        </small>
                                        <% } %>
                                </div>
                                <div class="box--card_botones">
                                    <div class="boton_editar">
                                        <a href="/posts/edit/<%= id %>"><i class="fa-solid fa-gear"></i></a>


                                    </div>
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal<%= id %>">
                                        Eliminar
                                    </button>
                                </div>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal<%= id %>" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <h4 class="text-center">¿Estás seguro de eliminar el producto?</h4>
                                            <form method="POST" action="/posts/destroy/<%= id %>?_method=DELETE">
                                                <div class="d-flex justify-content-center gap-3">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Cancelar</button>
                                                    <button class="btn btn-danger" type="submit">Sí, bórralo</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </article>
                </section>
                <!-- Sección de Contadores -->
                <section class="section_contadores">
                    <div class="contadores_header">
                        <h2 class="contadores_title">Contadores</h2>
                    </div>
                    <!-- Contadores -->
                    <article class="box_contadores">
                        <div class="box_contador">
                            <img src="https://pic.pnnet.dev/300x200?text=...&tc=white&bgc=grey"
                                alt="imagen de contador">
                            <div class="boton-agregar_contador">
                                <a href="" role="button"><i class="fa-solid fa-plus"></i></a>
                            </div>
                        </div>
                    </article>
                </section>
                <!-- Sección para Añadir -->
<!--               <section class="section_add">
                    <div class="add_header">
                        <h3 class="add_title">Añadir</h3>
                    </div>
                    <div class="add_opciones">
                        <ul type="none" class="opciones">
                            <li><a href="#"><i class="fa-solid fa-plus"></i>Añadir capacitacion</a></li>
                            <li><a href="#"><i class="fa-solid fa-plus"></i>Añadir evento</a></li>
                            <li><a href="#"><i class="fa-solid fa-plus"></i>Añadir actividad</a></li>
                        </ul>
                    </div>
                </section>--> 
            </main>
            <!--  Pie del sitio -->
            <%- include('./partials/footer') %>
    </body>

    </html>